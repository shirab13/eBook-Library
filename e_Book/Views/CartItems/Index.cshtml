@model IEnumerable<e_Book.Models.CartItem>

@{
    ViewBag.Title = "Cart Items";
}

<h2>עגלת הקניות שלי</h2>

<!-- הודעות הצלחה או שגיאה -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ספר</th>
            <th>מחבר</th>
            <th>מחיר</th>
            <th>כמות</th>
            <th>סוג עסקה</th>
            <th>סך הכל</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>@item.Book.Author</td>
                    <td id="price-@item.CartItemId">
                        @(item.TransactionType == "buy" ? string.Format("{0:C}", item.Book.PriceBuy) : string.Format("{0:C}", item.Book.PriceBorrow))
                    </td>
                    <td>
                        <button class="btn btn-sm btn-secondary" onclick="updateQuantity(@item.CartItemId, -1)">-</button>
                        @item.Quantity
                        <button class="btn btn-sm btn-secondary" onclick="updateQuantity(@item.CartItemId, 1)" @(item.Quantity >= 1 ? "disabled" : "")></button>
                    </td>
                    <td>
                        <select id="transactionType-@item.CartItemId" class="form-control" onchange="updateTransactionType(@item.CartItemId, this.value)">
                            <option value="buy" @(item.TransactionType == "buy" ? "selected" : "")>קנייה</option>
                            <option value="borrow" @(item.TransactionType == "borrow" ? "selected" : "")>השאלה</option>
                        </select>
                    </td>
                    <td id="total-@item.CartItemId">
                        @string.Format("{0:C}", (item.TransactionType == "buy" ? item.Book.PriceBuy : item.Book.PriceBorrow) * item.Quantity)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">עגלת הקניות ריקה</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right"><strong>סה"כ כולל:</strong></td>
            <td id="grandTotal" colspan="2">
                @string.Format("{0:C}", Model.Sum(item => (item.TransactionType == "buy" ? item.Book.PriceBuy : item.Book.PriceBorrow) * item.Quantity))
            </td>
        </tr>
    </tfoot>
</table>

<!-- כפתור מעבר לדף תשלום -->
@if (Model != null && Model.Any())
{
    <div class="text-right">
        <a href="@Url.Action("Checkout", "CartItems")" class="btn btn-primary">המשך לתשלום</a>
    </div>
}

<script>
    function updateQuantity(cartItemId, delta) {
    fetch('@Url.Action("EditQuantity", "CartItems")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ cartItemId, delta }),
    })
        .then((response) => response.json())
        .then((data) => {
            if (data.success) {
                location.reload(); // רענון הדף לאחר עדכון
            } else {
                alert(data.message); // הודעה אם לא ניתן לעדכן
            }
        })
        .catch((error) => {
            console.error('Error:', error);
            alert('שגיאה בעדכון הכמות.');
        });
}


    function updateTransactionType(cartItemId, transactionType) {
        fetch('@Url.Action("GetBookPrice", "CartItems")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ cartItemId, transactionType })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const priceElement = document.getElementById(`price-${cartItemId}`);
                const totalElement = document.getElementById(`total-${cartItemId}`);
                const grandTotalElement = document.getElementById('grandTotal');

                priceElement.textContent = data.price;
                totalElement.textContent = data.total;
                grandTotalElement.textContent = data.grandTotal;
            } else {
                alert(data.message);
                document.getElementById(`transactionType-${cartItemId}`).value = "buy";
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('שגיאה בתקשורת עם השרת.');
        });
    }
</script>
